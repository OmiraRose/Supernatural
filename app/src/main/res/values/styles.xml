<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="questionText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">@color/aliceBlue</item>
        <item name="android:textSize">26sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    <style name="resultsText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/darkOrange</item>
        <item name="android:shadowColor">@color/aliceBlue</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="messageText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">@color/darkOrange</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="numberText">
        <item name="android:textColor">@color/aliceBlue</item>
        <item name="android:textSize">28sp</item>
        <item name="android:shadowColor">@color/midnightBlue</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
    </style>

</resources>
